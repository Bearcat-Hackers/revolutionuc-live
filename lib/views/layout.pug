doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1.0, minimum-scale=1.0')
        link(rel="manifest", href="manifest.json")
        meta(name='theme-color', content='#C24851')

        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0, minimum-scale=1.0, user-scalable=no")

        // Disable indexing from search engines
        meta(name='robots', content='noindex, nofollow')

        // Add to homescreen for Safari on iOS
        meta(name="mobile-web-app-capable", content="yes")
        meta(name="apple-mobile-web-app-capable", content="yes")
        meta(name="apple-mobile-web-app-status-bar-style", content="black")
        meta(name="apple-mobile-web-app-title", content="RevolutionUC Live")

        title #{title} - RevolutionUC Live Fall 2016

        link(rel='icon' type='image/png' href='/favicon-32.png' sizes='32x32')
        link(rel='icon' type='image/png' href='/favicon-16.png' sizes='16x16')
        link(rel='apple-touch-icon' href='/apple-touch-icon.png' sizes='180x180')

        link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Ubuntu:400,700')
        link(rel='stylesheet', href='/stylesheets/main.min.css')
    body
        nav.navbar.navbar-default.navbar-fixed-top
            .container-fluid
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/') RevolutionUC Live
                .collapse.navbar-collapse(id='bs-example-navbar-collapse-1')
                    ul.nav.navbar-nav.navbar-right
                        li
                            a
                                span Subscribe to notifications:
                                label.switch
                                    input(type='checkbox')
                                    .slider.round#subscribe-button
                        li
                            a(href='/schedule') Schedule
                        li
                            a(href='/talks') Tech Talks
                        li
                            a(href='http://revolutionuc1.devpost.com/') Devpost
                        li
                            a(href='/sponsors') Sponsors
                        li
                            a(href='https://docs.google.com/forms/d/e/1FAIpQLSdyJqdSIvZn6RJPy-Qk8K4zSQ7F_Sb6h8qiykPB-7cE1ZD_Kg/viewform') Request a Mentor
                        li
                            a(target='_blank', href='https://www.uc.edu/content/dam/common/docs/maps/campus_map_west_color.pdf') Map
        .container
            .row
                .col-sm-12
                    block content

        script(src='//ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')
        script(src='/javascripts/main.min.js')
